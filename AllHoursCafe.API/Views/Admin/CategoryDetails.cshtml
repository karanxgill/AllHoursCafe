@model AllHoursCafe.API.Models.Category
@{
    ViewData["Title"] = "Category Details";
    Layout = "_AdminLayout";
}

<div class="admin-header">
    <h1 class="admin-title">Category Details</h1>
    <div class="admin-actions">
        <a asp-action="EditCategory" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Categories" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-form">
    <div class="row">
        <div class="col-md-12">
            <div class="detail-item">
                <div class="detail-label">Name</div>
                <div class="detail-value">@Model.Name</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Description</div>
                <div class="detail-value">@Model.Description</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Status</div>
                <div class="detail-value">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="form-actions mt-4">
        <a asp-action="EditCategory" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="DeleteCategory" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Categories" class="btn btn-secondary">Back to List</a>
    </div>
</div>
