@model AllHoursCafe.API.Models.User
@using System.Security.Claims
@{
    ViewData["Title"] = "User Details";
    Layout = "_AdminLayout";
}

<div class="admin-header">
    <h1 class="admin-title">User Details</h1>
    <div class="admin-actions">
        <a asp-action="Users" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        @if (User.IsInRole("SuperAdmin"))
        {
            @* Hide Update Role button if viewing own profile as SuperAdmin *@
            @if (Model.Id != int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)) || Model.Role != "SuperAdmin")
            {
                <a asp-action="UpdateRole" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-user-shield"></i> Update Role
                </a>
            }
        }

        @if (User.IsInRole("SuperAdmin") && (Model.Role != "SuperAdmin" || User.IsInRole("SuperAdmin")))
        {
            <form asp-action="ToggleUserStatus" asp-route-id="@Model.Id" method="post" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn @(Model.IsActive ? "btn-danger" : "btn-success")">
                    <i class="fas @(Model.IsActive ? "fa-user-slash" : "fa-user-check")"></i>
                    @(Model.IsActive ? "Disable Account" : "Enable Account")
                </button>
            </form>
        }
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">@Model.FullName</h5>
        <div>
            <span class="badge @(Model.Role == "SuperAdmin" ? "badge-dark" : (Model.Role == "Admin" ? "badge-primary" : "badge-secondary"))">
                @Model.Role
            </span>
            <span class="badge @(Model.IsActive ? "badge-success" : "badge-danger")">
                @(Model.IsActive ? "Active" : "Inactive")
            </span>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" id="closeSuccessAlert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <script>
                // Auto-dismiss the success message after 5 seconds
                setTimeout(function() {
                    document.getElementById('successAlert').style.display = 'none';
                }, 5000);

                // Manual close button handler
                document.getElementById('closeSuccessAlert').addEventListener('click', function() {
                    document.getElementById('successAlert').style.display = 'none';
                });
            </script>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert" id="errorAlert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" id="closeErrorAlert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <script>
                // Auto-dismiss the error message after 5 seconds
                setTimeout(function() {
                    document.getElementById('errorAlert').style.display = 'none';
                }, 5000);

                // Manual close button handler
                document.getElementById('closeErrorAlert').addEventListener('click', function() {
                    document.getElementById('errorAlert').style.display = 'none';
                });
            </script>
        }
        <div class="row">
            <div class="col-md-6">
                <h6 class="font-weight-bold">Contact Information</h6>
                <dl class="row">
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Phone:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <span class="text-dark"><i class="fas fa-phone mr-2"></i>@Model.PhoneNumber</span>
                        }
                        else
                        {
                            <span class="text-muted">Not provided</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <h6 class="font-weight-bold">Account Information</h6>
                <dl class="row">
                    <dt class="col-sm-4">User ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Created:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Role:</dt>
                    <dd class="col-sm-8">@Model.Role</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="text-success"><i class="fas fa-check-circle mr-2"></i>Active</span>
                        }
                        else
                        {
                            <span class="text-danger"><i class="fas fa-times-circle mr-2"></i>Inactive</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <h6 class="font-weight-bold">Address Information</h6>
                <div class="card mb-3">
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-2">Address:</dt>
                            <dd class="col-sm-10">
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    <span class="text-dark"><i class="fas fa-home mr-2"></i>@Model.Address</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>

                            <dt class="col-sm-2">City:</dt>
                            <dd class="col-sm-10">
                                @if (!string.IsNullOrEmpty(Model.City))
                                {
                                    <span class="text-dark"><i class="fas fa-city mr-2"></i>@Model.City</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>

                            <dt class="col-sm-2">State:</dt>
                            <dd class="col-sm-10">
                                @if (!string.IsNullOrEmpty(Model.State))
                                {
                                    <span class="text-dark"><i class="fas fa-map-marker-alt mr-2"></i>@Model.State</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>

                            <dt class="col-sm-2">Postal Code:</dt>
                            <dd class="col-sm-10">
                                @if (!string.IsNullOrEmpty(Model.PostalCode))
                                {
                                    <span class="text-dark"><i class="fas fa-mail-bulk mr-2"></i>@Model.PostalCode</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <h6 class="font-weight-bold">Order History</h6>
                @if (ViewBag.Orders != null && ViewBag.Orders.Count > 0)
                {
                    <div class="card">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover mb-0">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Order #</th>
                                            <th>Date</th>
                                            <th>Items</th>
                                            <th>Total</th>
                                            <th>Payment</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in ViewBag.Orders)
                                        {
                                            <tr>
                                                <td><strong>AHC-@order.Id.ToString("D6")</strong></td>
                                                <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                                                <td>@(order.OrderItems != null ? order.OrderItems.Count : 0) items</td>
                                                <td><strong class="text-primary">â‚¹@order.Total.ToString("F2")</strong></td>
                                                <td>
                                                    <span class="badge @(order.PaymentStatus == "Completed" ? "badge-success" : "badge-warning")">
                                                        @order.PaymentStatus
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge @(order.OrderStatus == "Confirmed" ? "badge-success" : (order.OrderStatus == "Cancelled" ? "badge-danger" : "badge-warning"))">
                                                        @order.OrderStatus
                                                    </span>
                                                </td>
                                                <td>
                                                    <a asp-action="OrderDetails" asp-controller="Admin" asp-route-id="@order.Id" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i> View Order
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle mr-2"></i> No orders found for this user.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
