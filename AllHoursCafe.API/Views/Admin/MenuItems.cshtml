@model IEnumerable<AllHoursCafe.API.Models.MenuItem>
@{
    ViewData["Title"] = "Menu Items";
    Layout = "_AdminLayout";
}

<div class="admin-header">
    <h1 class="admin-title">Menu Items</h1>
    <div class="admin-actions">
        <button type="button" onclick="window.location.href='/Admin/EnhancedCreateMenuItem'" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Menu Item
        </button>
        <button type="button" onclick="showBulkUploadForm()" class="btn btn-secondary">
            <i class="fas fa-file-upload"></i> Bulk Upload from Excel
        </button>
        <a href="/templates/menu-bulk-upload-sample.xlsx" class="btn btn-link" download>Download Sample Excel</a>
    </div>

    <!-- Simple Bulk Upload Form -->
    <div id="bulkUploadForm" style="display: none; margin-top: 20px; padding: 20px; background-color: #f8f9fa; border-radius: 5px;">
        <h4>Bulk Upload Menu Items</h4>
        <form action="/Admin/BulkUploadMenuItems" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="excelFile">Select Excel File (.xlsx)</label>
                <input type="file" class="form-control-file" id="excelFile" name="excelFile" accept=".xlsx" required />
            </div>
            <div style="margin-top: 15px;">
                <button type="button" onclick="hideBulkUploadForm()" class="btn btn-secondary">Cancel</button>
                <button type="submit" class="btn btn-primary">Upload</button>
            </div>
        </form>
    </div>
</div>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert">
        <i class="fas fa-check-circle mr-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <script>
        // Auto-dismiss the success message after 5 seconds
        setTimeout(function() {
            $('#successAlert').fadeOut('slow');
        }, 5000);
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="errorAlert">
        <i class="fas fa-exclamation-circle mr-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <script>
        // Auto-dismiss the error message after 5 seconds
        setTimeout(function() {
            $('#errorAlert').fadeOut('slow');
        }, 5000);
    </script>
}

<div class="table-responsive">
    <table class="admin-table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.Name" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='/images/placeholder.jpg'; console.log('Image failed to load: ' + '@item.ImageUrl');" crossorigin="anonymous" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Category?.Name</td>
                    <td>â‚¹@item.Price.ToString("F2")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success text-white">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger text-white">Inactive</span>
                        }
                    </td>
                    <td class="actions">
                        <!-- Plain HTML buttons with direct onclick handlers -->
                        <button type="button" onclick="window.location.href='/Admin/MenuItemDetails/@item.Id'" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button type="button" onclick="window.location.href='/Admin/EditMenuItem/@item.Id'" class="btn btn-primary btn-sm" style="margin: 0 5px;">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button type="button" onclick="window.location.href='/Admin/DeleteMenuItem/@item.Id'" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No menu items found. <a href="/Admin/CreateMenuItem">Add your first menu item</a>.
    </div>
}

@section Scripts {
    <script>
        // Functions for bulk upload form
        function showBulkUploadForm() {
            document.getElementById('bulkUploadForm').style.display = 'block';
        }

        function hideBulkUploadForm() {
            document.getElementById('bulkUploadForm').style.display = 'none';
        }

        // Initialize page functionality
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Menu Items page loaded');

            // Add click handlers for action buttons
            var actionButtons = document.querySelectorAll('.actions button');
            actionButtons.forEach(function(button) {
                console.log('Found action button:', button.innerHTML);
                // The onclick attribute is already set in the HTML
            });

            // Add form submission handler
            var bulkUploadForm = document.querySelector('#bulkUploadForm form');
            if (bulkUploadForm) {
                bulkUploadForm.addEventListener('submit', function(e) {
                    console.log('Form submitted');
                    // Let the form submit normally
                });
            }
        });
    </script>
}
