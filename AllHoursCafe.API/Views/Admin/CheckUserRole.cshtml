@model AllHoursCafe.API.Models.User
@using System.Security.Claims
@{
    ViewData["Title"] = "Check User Role";
    Layout = "_AdminLayout";
}

<div class="admin-header">
    <h1 class="admin-title">Check User Role</h1>
    <div class="admin-actions">
        <a asp-action="Users" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Direct Database Check</h5>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="alert alert-info">
            <p>This page shows the user's role directly from the database.</p>
        </div>

        <div class="user-details">
            <div class="detail-item">
                <div class="detail-label">Name</div>
                <div class="detail-value">@Model.FullName</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Email</div>
                <div class="detail-value">@Model.Email</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">Role</div>
                <div class="detail-value">
                    <span class="badge @(Model.Role == "SuperAdmin" ? "badge-dark" : (Model.Role == "Admin" ? "badge-primary" : "badge-secondary"))">
                        @Model.Role
                    </span>
                </div>
            </div>
        </div>

        <div class="mt-4">
            @if (User.IsInRole("SuperAdmin"))
            {
                @* Hide Update Role button if viewing own profile as SuperAdmin *@
                @if (Model.Id != int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)) || Model.Role != "SuperAdmin")
                {
                    <a asp-action="UpdateRole" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-user-shield"></i> Update Role
                    </a>
                }
            }
            <a asp-action="Users" class="btn btn-secondary @(User.IsInRole("SuperAdmin") && (Model.Id != int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)) || Model.Role != "SuperAdmin") ? "ml-2" : "")">
                <i class="fas fa-users"></i> Back to Users List
            </a>
        </div>
    </div>
</div>
