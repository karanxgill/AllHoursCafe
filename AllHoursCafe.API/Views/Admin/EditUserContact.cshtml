@model AllHoursCafe.API.Models.User
@{
    ViewData["Title"] = "Edit User Contact Information";
    Layout = "_AdminLayout";
}

<div class="admin-header">
    <h1 class="admin-title">Edit User Contact Information</h1>
    <div class="admin-actions">
        <a asp-action="UserDetails" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to User Details
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">@Model.FullName</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditUserContact" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="FullName" />
            <input type="hidden" asp-for="PasswordHash" />
            <input type="hidden" asp-for="Role" />
            <input type="hidden" asp-for="IsActive" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="ProfilePictureUrl" />
            <input type="hidden" asp-for="PreferredLanguage" />
            <input type="hidden" asp-for="DateOfBirth" />
            <input type="hidden" asp-for="PasswordResetToken" />
            <input type="hidden" asp-for="PasswordResetTokenExpiry" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="City" class="control-label">City</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="State" class="control-label">State</label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="PostalCode" class="control-label">Postal Code</label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
