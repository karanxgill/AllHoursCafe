@model AllHoursCafe.API.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

@section Styles {
    <link rel="stylesheet" href="/css/auth.css" />
}

<div class="auth-container">
    <div class="auth-form-container">
        <h2>Forgot Password</h2>
        <p class="auth-description">Enter your email address and we'll send you a link to reset your password.</p>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit">Send Reset Link</button>
            <div class="form-footer">
                <p>Remember your password? <a asp-action="Login">Login here</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
