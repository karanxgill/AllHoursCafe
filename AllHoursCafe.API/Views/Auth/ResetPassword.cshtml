@model AllHoursCafe.API.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

@section Styles {
    <link rel="stylesheet" href="/css/auth.css" />
}

<div class="auth-container">
    <div class="auth-form-container">
        <h2>Reset Password</h2>
        <p class="auth-description">Create a new password for your account.</p>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input asp-for="Email" type="hidden" />
            <input asp-for="Token" type="hidden" />
            
            <div class="form-group">
                <label asp-for="NewPassword">New Password</label>
                <input asp-for="NewPassword" class="form-control" placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm new password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit">Reset Password</button>
            <div class="form-footer">
                <p>Remember your password? <a asp-action="Login">Login here</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
