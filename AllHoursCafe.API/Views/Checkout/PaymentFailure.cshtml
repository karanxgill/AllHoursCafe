@model AllHoursCafe.API.Models.Order

@{
    ViewData["Title"] = "Payment Failed";
}

<link rel="stylesheet" href="/css/order-confirmation.css">

<div class="container mt-5 mb-5">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle mr-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card order-confirmation-card">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex align-items-center">
                        <div class="success-icon-container mr-3">
                            <i class="fas fa-times-circle success-icon"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">Payment Failed</h2>
                            <p class="mb-0">There was an issue with your payment</p>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="confirmation-message text-center mb-4">
                        <h3>Your payment could not be processed</h3>
                        <p class="lead">We encountered an issue while processing your payment.</p>
                        <div class="order-number">
                            <span>Order #</span>
                            <strong>@Model.Id</strong>
                        </div>
                        <p class="text-muted">A notification has been sent to @Model.CustomerEmail</p>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="order-items-section">
                                <h4><i class="fas fa-shopping-cart mr-2"></i> Order Items</h4>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Item</th>
                                                <th class="text-center">Quantity</th>
                                                <th class="text-right">Price</th>
                                                <th class="text-right">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.OrderItems)
                                            {
                                                <tr>
                                                    <td>@item.Name</td>
                                                    <td class="text-center">@item.Quantity</td>
                                                    <td class="text-right">₹@item.Price.ToString("F2")</td>
                                                    <td class="text-right">₹@item.Total.ToString("F2")</td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="3" class="text-right">Subtotal:</td>
                                                <td class="text-right">₹@Model.SubTotal.ToString("F2")</td>
                                            </tr>
                                            <tr>
                                                <td colspan="3" class="text-right">Tax:</td>
                                                <td class="text-right">₹@Model.Tax.ToString("F2")</td>
                                            </tr>
                                            @if (Model.DeliveryFee > 0)
                                            {
                                                <tr>
                                                    <td colspan="3" class="text-right">Delivery Fee:</td>
                                                    <td class="text-right">₹@Model.DeliveryFee.ToString("F2")</td>
                                                </tr>
                                            }
                                            <tr class="total-row">
                                                <td colspan="3" class="text-right"><strong>Total:</strong></td>
                                                <td class="text-right"><strong>₹@Model.Total.ToString("F2")</strong></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="order-info-section">
                                <div class="order-info-card mb-3">
                                    <h5><i class="fas fa-info-circle mr-2"></i> Order Information</h5>
                                    <div class="info-item">
                                        <span class="info-label">Order Number:</span>
                                        <span class="info-value">#@Model.Id</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Order Date:</span>
                                        <span class="info-value">@Model.OrderDate.ToString("MMM dd, yyyy hh:mm tt")</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Order Status:</span>
                                        <span class="info-value status-pending">@Model.OrderStatus</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Payment Method:</span>
                                        <span class="info-value">@Model.PaymentMethod</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Payment Status:</span>
                                        <span class="info-value status-failed">Failed</span>
                                    </div>
                                </div>

                                <div class="order-info-card mb-3">
                                    <h5><i class="fas fa-user mr-2"></i> Customer Information</h5>
                                    <div class="info-item">
                                        <span class="info-label">Name:</span>
                                        <span class="info-value">@Model.CustomerName</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Email:</span>
                                        <span class="info-value">@Model.CustomerEmail</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Phone:</span>
                                        <span class="info-value">@Model.CustomerPhone</span>
                                    </div>
                                </div>

                                <div class="order-info-card">
                                    <h5><i class="fas fa-map-marker-alt mr-2"></i> Delivery Information</h5>
                                    <div class="info-item">
                                        <span class="info-label">Address:</span>
                                        <span class="info-value">@Model.DeliveryAddress</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">City:</span>
                                        <span class="info-value">@Model.City</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">State:</span>
                                        <span class="info-value">@Model.State</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Postal Code:</span>
                                        <span class="info-value">@Model.PostalCode</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Order Type:</span>
                                        <span class="info-value">@Model.OrderType</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.SpecialInstructions))
                                    {
                                        <div class="info-item">
                                            <span class="info-label">Special Instructions:</span>
                                            <span class="info-value">@Model.SpecialInstructions</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a href="/Checkout/Payment/@Model.Id" class="btn btn-primary btn-lg">
                            <i class="fas fa-credit-card mr-2"></i> Try Payment Again
                        </a>
                        <a href="/" class="btn btn-secondary btn-lg ml-2">
                            <i class="fas fa-home mr-2"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .status-failed {
        color: #dc3545;
        font-weight: bold;
    }
    
    .status-pending {
        color: #ffc107;
        font-weight: bold;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Animate the error icon
            $('.success-icon').addClass('animate-success');

            // Fade in the order items one by one
            $('.order-items-section tbody tr').each(function(index) {
                $(this).delay(100 * index).animate({ opacity: 1 }, 500);
            });

            // Highlight the total row
            setTimeout(function() {
                $('.total-row').addClass('highlight');
            }, 1000);
        });
    </script>
}
