@{
    ViewData["Title"] = "Welcome";
}

<!-- Hero Section -->
<section id="hero">
    <!-- Empty hero section with just the background image -->
</section>

<!-- Features Section -->
<section id="features">
    <div class="container">
        <div class="section-header animate-on-scroll" data-animation="fade-down">
            <h2>Why Choose Us</h2>
            <p>We offer the best cafe experience in town</p>
        </div>
        <div class="features-container">
            <div class="features-grid">
            <div class="feature-card animate-on-scroll" data-animation="fade-right" data-delay="0">
                <div class="feature-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="feature-content">
                    <h3>24/7 Service</h3>
                    <p>We're always open to serve you delicious food and beverages, no matter what time of day or night.</p>
                </div>
                <div class="feature-hover-effect"></div>
            </div>
            <div class="feature-card animate-on-scroll" data-animation="fade-up" data-delay="200">
                <div class="feature-icon">
                    <i class="fas fa-coffee"></i>
                </div>
                <div class="feature-content">
                    <h3>Premium Coffee</h3>
                    <p>Enjoy our selection of premium coffee beans sourced from the finest coffee regions around the world.</p>
                </div>
                <div class="feature-hover-effect"></div>
            </div>
            <div class="feature-card animate-on-scroll" data-animation="fade-left" data-delay="400">
                <div class="feature-icon">
                    <i class="fas fa-utensils"></i>
                </div>
                <div class="feature-content">
                    <h3>Delicious Food</h3>
                    <p>Our menu features a variety of delicious dishes made with fresh, locally-sourced ingredients.</p>
                </div>
                <div class="feature-hover-effect"></div>
            </div>
            <div class="feature-card animate-on-scroll" data-animation="fade-up" data-delay="600">
                <div class="feature-icon">
                    <i class="fas fa-wifi"></i>
                </div>
                <div class="feature-content">
                    <h3>Free Wi-Fi</h3>
                    <p>Stay connected with our high-speed internet while enjoying your favorite coffee and food.</p>
                </div>
                <div class="feature-hover-effect"></div>
            </div>
        </div>
        </div>
    </div>
</section>

<!-- Menu Preview Section -->
<section id="menu-preview">
    <div class="container">
        <div class="section-header animate-on-scroll" data-animation="fade-down">
            <h2>Our Menu Highlights</h2>
            <p>Explore our delicious offerings</p>
        </div>

        <!-- Menu Categories -->
        <div class="menu-categories">
            <!-- Breakfast Category -->
            <div class="menu-category animate-on-scroll" data-animation="fade-up">
                <h3>Breakfast</h3>
                <div class="menu-items">
                    <div class="menu-item">
                        <a href="/Menu">
                            <img src="~/images/items/breakfast/avocado-toast.jpg" alt="Avocado Toast">
                            <div class="item-info">
                                <h4>Avocado Toast</h4>
                                <p>Fresh avocado on artisanal bread</p>
                            </div>
                        </a>
                    </div>
                    <div class="menu-item">
                        <a href="/Menu">
                            <img src="~/images/items/breakfast/breakfast-burrito.jpg" alt="Breakfast Burrito">
                            <div class="item-info">
                                <h4>Breakfast Burrito</h4>
                                <p>Eggs, cheese, and fresh vegetables</p>
                            </div>
                        </a>
                    </div>
                    <div class="menu-item">
                        <a href="/Menu">
                            <img src="~/images/items/breakfast/fluffy-pancake.jpg" alt="Pancakes">
                            <div class="item-info">
                                <h4>Fluffy Pancakes</h4>
                                <p>Served with maple syrup and butter</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Beverages Category -->
            <div class="menu-category animate-on-scroll" data-animation="fade-up" data-delay="200">
                <h3>Beverages</h3>
                <div class="menu-items">
                    <div class="menu-item fresh-coffee">
                        <a href="/Menu">
                            <img src="~/images/coffee.jpg" alt="Fresh Coffee">
                            <div class="item-info">
                                <h4>Fresh Coffee</h4>
                                <p>Premium roasted coffee</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- View Full Menu Button -->
        <div class="view-menu-button animate-on-scroll" data-animation="fade-up">
            <a href="/Menu" class="btn-primary">View Full Menu</a>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about">
    <div class="container">
        <div class="about-content">
            <div class="about-text animate-on-scroll" data-animation="fade-right">
                <div class="about-title-wrapper animate-on-scroll" data-animation="fade-up" data-delay="200">
                    <h2 class="about-title">Our Story</h2>
                </div>
                <p class="lead animate-on-scroll" data-animation="fade-up" data-delay="400">Your perfect destination for great coffee, delicious food, and a welcoming atmosphere.</p>
                <div class="about-paragraph animate-on-scroll" data-animation="fade-up" data-delay="600">
                    <p>Founded in 2020, AllHoursCafe has quickly become a favorite spot for locals and visitors alike. We take pride in serving the finest coffee and fresh, locally-sourced food in a comfortable environment perfect for work, meetings, or casual gatherings.</p>
                </div>
                <div class="about-paragraph animate-on-scroll" data-animation="fade-up" data-delay="800">
                    <p>Our team of passionate baristas and chefs work tirelessly to ensure that every cup of coffee and every dish that leaves our kitchen meets our high standards of quality and taste.</p>
                </div>
                <a href="/Home/About" class="btn-link animate-on-scroll" data-animation="fade-up" data-delay="1000">Learn more about us <i class="fas fa-arrow-right"></i></a>
            </div>
            <div class="about-image animate-on-scroll" data-animation="fade-left">
                <img src="/images/cook.jpeg" alt="Our Chef" class="animated">
            </div>
        </div>
    </div>
</section>



<!-- Reservation CTA Section -->
<section id="reservation-cta">
    <div class="container">
        <div class="reservation-content">
            <h2>Reserve Your Table Today</h2>
            <p>Experience the perfect dining atmosphere at AllHoursCafe. Skip the wait and secure your spot with our easy online reservation system.</p>
            <div class="reservation-features">
                <div class="reservation-feature">
                    <i class="fas fa-calendar-check"></i>
                    <h3>Easy Booking</h3>
                    <p>Simple online process, book in seconds</p>
                </div>
                <div class="reservation-feature">
                    <i class="fas fa-clock"></i>
                    <h3>Flexible Hours</h3>
                    <p>Morning to late night availability</p>
                </div>
                <div class="reservation-feature">
                    <i class="fas fa-users"></i>
                    <h3>Group Friendly</h3>
                    <p>Accommodations for parties of all sizes</p>
                </div>
            </div>
            <a asp-controller="Reservation" asp-action="Create" class="cta-button primary">Reserve Now</a>
        </div>
    </div>
</section>