@model AllHoursCafe.API.Models.MenuHighlight
@{
    ViewData["Title"] = "Delete Menu Highlight";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content-container">
    <div class="admin-header">
        <h1>Delete Menu Highlight</h1>
        <p>Are you sure you want to delete this menu highlight?</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h2>Confirm Deletion</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> This action cannot be undone.
            </div>

            <div class="highlight-details">
                <h3>Highlight Details</h3>
                <dl class="row">
                    <dt class="col-sm-3">Menu Item</dt>
                    <dd class="col-sm-9">@Model.MenuItem.Name</dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">@Model.MenuItem.Category.Name</dd>

                    <dt class="col-sm-3">Section</dt>
                    <dd class="col-sm-9">@Model.Section</dd>

                    <dt class="col-sm-3">Display Order</dt>
                    <dd class="col-sm-9">@Model.DisplayOrder</dd>

                    <dt class="col-sm-3">Custom Title</dt>
                    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.CustomTitle) ? "-" : Model.CustomTitle)</dd>

                    <dt class="col-sm-3">Custom Description</dt>
                    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.CustomDescription) ? "-" : Model.CustomDescription)</dd>

                    <dt class="col-sm-3">Custom Image</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.CustomImageUrl))
                        {
                            <img src="@Model.CustomImageUrl" alt="Custom image" style="max-width: 100px; max-height: 100px;" class="img-thumbnail" />
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>
                </dl>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
